{% extends 'base.twig' %}

{% block title %}Reset password{% endblock %}

{% block footer %}
    <script src="/js/hideShowPassword.min.js"></script>
    <script src="/js/app.js"></script>

    <script>
        $(document).ready(function() {

            /**
             * Validate the form
             */
            $('#formPassword').validate({
                rules: {
                    password: {
                        required: true,
                        minlength: 6,
                        validPassword: true
                    }
                }
            });


            /**
              * Show password toggle button
              */
            $('#inputPassword').hideShowPassword({
                show: false,
                innerToggle: 'focus'
            });
        });
    </script>

{% endblock %}

{% block body %}
    
    <div class="inputContainer mt-3">			
			
        <header>
            <h2 class="font-weight-bold rounded">Reset password</h2>
        </header>

    {% if user.errors is not empty %}
        <p>Errors:</p>
        <ul>
            {% for error in user.errors %}
                <li>{{ error }}</li>
            {% endfor %}
        </ul>
    {% endif %}

        <form method="post" id="formPassword" action="/password/reset-password">

            <input type="hidden" name="token" value="{{ token }}" />

            <!--
            <div class="input-group">
                <div class="input-group-prepend">				
                    <span class="input-group-text rounded-left icon"><i class="icon-lock"></i></span>
                </div>
                <input type="password" id="inputPassword" name="password" placeholder="Password" class="form-control" />
            </div>
            -->            
            <input type="password" id="inputPassword" name="password" placeholder="Password" class="form-control" style="width: 330px;" />

            <button type="submit" class="btn login">Reset password</button>

        </form>

    </div>

{% endblock %}
