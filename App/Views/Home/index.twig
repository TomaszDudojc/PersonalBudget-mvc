{% extends 'base.twig' %}

{% block title %}Home{% endblock %}

{% block footer %}

<script src="../js/memory.js"></script>

{% endblock %}

{% block nav_item_1 %}active{% endblock %}

{% block body %}  

    {% if current_user %}
        <!--Hello {{ current_user.name }}.-->
        <!--
            <li><a href="/profile/show">Profile</a></li>
            <li><a href="/logout">Log out</a></li>
         -->                        
        <main>
                            
            <div class="container mt-3 mb-5">
                            
                <div class="row">
                    <!-- start game-->
                    <div id="game" class="col-12 mx-auto" style="display: none;">
                        <header>	
                            <h1 class="game">Gwent Memory Test</h1>
                            <p class="game">by Mirosław Zelent</p>                    
                            <p class="game">Inspired by <a href="https://www.playgwent.com/pl" target="_blank">Gwent - The Witcher Card Game</a></p>                    
	                    </header>
	
                        <main>
                        
                            <article>
                            
                                <div class="board col-12">
                                
                                    <div class="card col-3" id="c0"></div>
                                    <div class="card col-3" id="c1"></div>
                                    <div class="card col-3" id="c2"></div>
                                    <div class="card col-3" id="c3"></div>
                                    
                                    <div class="card col-3" id="c4"></div>
                                    <div class="card col-3" id="c5"></div>
                                    <div class="card col-3" id="c6"></div>
                                    <div class="card col-3" id="c7"></div>
                                    
                                    <div class="card col-3" id="c8"></div>
                                    <div class="card col-3" id="c9"></div>
                                    <div class="card col-3" id="c10"></div>
                                    <div class="card col-3" id="c11"></div>
                                    
                                    <div class="score">Turn counter: 0</div>                                    
                                
                                </div>
                                 <div class="col-8 text-center rounded mx-auto mb-3">
                                <button type="button" id="closeGameButtton" class="btn btn-info col-md-5 col-10 mx-auto" onClick="document.getElementById('game').style.display='none', document.getElementById('welcome').style.display='block';" style="letter-spacing: 4px; white-space: pre-wrap;">Pause</button>
                                <a href="/"><button type="button" id="closeGameButtton" class="btn btn-secondary col-md-5 col-10 mx-auto"  style="letter-spacing: 4px; white-space: pre-wrap;">Close</button></a>
                                </div>
                            </article>
                        
                        </main>	
	
                    </div>                   
                    <!-- end game-->                                                    
 
                    <div class="col-8 text-center rounded mx-auto mb-3" id="welcome">				
                        <h3 style="color: #209781">&#128400;<i> Hello, {{ current_user.name }}!</i></h3>
                        <h3 style="color: #209781"><i>Select an option from the menu above</i></h3>
                        <h3 style="color: #209781"><i>... or maybe short game below?</i></h3>
                        <button type="button" class="btn login col-md-5 col-10 mt-5" onClick="document.getElementById('game').style.display='block', document.getElementById('welcome').style.display='none';" style="white-space: pre-wrap;">Play &#8883;</button>                    
                                   		
                    <!--<div class="w-100"></div>-->
                                    
                    <!--<div class="col-9 mx-auto mt-3">
                        <div class="row">
                            <div class="col-lg-5 col-9 mt-3 mx-auto">				
                                <img class="img-thumbnail" src="../img/plan.jpg" alt="plan">
                            </div>
                            <div class="col-lg-5 col-9 mt-3 mx-auto">	
                                <img class="img-thumbnail" src="../img/plan2.jpg" alt="plan2">		
                            </div>
                        </div>
                    </div>-->                                    
                 </div>

            </div>
                            
        </main>

    {% else %}       
            
            <main>
                <!--<div class="mx-auto" style="width: 100%; height: 40px;">					
                    <h3 class="text-center rounded mx-auto pb-1 pt-0 bg-secondary" style="color: black;"><span style="font-size: 34px;">&#191;</span> How does it work?</h3>
                </div>-->
            
                <div class="container mt-3 mb-5">
                                        
                    <div class="row">                       
                        
                        <div class="col-lg-5 col-11 mt-3 mx-auto">                           
                            <p class="rounded mx-auto p-3" style="background-color: none; color: #209781; border: 5px solid #209781; font-size: 17px;">						
                            It is a free application that helps you manage your own finances in a quick and intuitive way. After registration, you can log in to your account and use the menu offering the following functionalities:<br>
                            <i class="icon-money mr-1"></i>add income - a simple and pleasant option<br>
                            <i class="icon-basket mr-1"></i>add expense - option sometimes necessary. To better control your expenses, you can set limit for each expense category in the settings.<br>
                            <i class="icon-chart-bar mr-1"></i>view balance sheet - displays balance sheet for a selected period of time grouped into categories<br>
                            <i class="icon-wrench mr-1"></i>settings - allows you to personalize the application				
                            </p>
                        </div>
                        
                        <div class="col-lg-5 col-11 mt-3 mx-auto">	
                            <img class="img-thumbnail"  style="background-color: #209781; border: 1px solid #209781;" src="img/żarówki.jpg" alt="żarówki">
                        </div>
                        
                        <div class="w-100"></div>
                        
                        <div class="col-lg-5 col-11 mt-3 mx-auto">					
                            <a href="/signup/new" ><button type="button" class="btn register" style="width: 100%">Sign up</button></a>
                        </div>
                        
                        <div class="col-lg-5 col-11 mt-3 mx-auto">		
                            <a href="/login" ><button type="button" class="btn login" style="width: 100%">Login</button></a>
                        </div>
                        
                    </div>
                    
                </div>		
                    
            </main>                
            
    {% endif %}

{% endblock %}
