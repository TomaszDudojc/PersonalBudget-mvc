{% extends 'base.twig' %}

{% block title %}Add income{% endblock %}

{% block nav_item_2 %}active{% endblock %}

{% block body %} 
         
         <main>
	
            <div class="inputContainer mt-3">			
                
                <header>
                    <h2 class="font-weight-bold rounded bg-secondary">New income<i class="icon-money ml-3"></i></h2>
                </header>
            
                <form action="/income/create" method="post">	
                   
                    <input type="number" class="form-control" step="0.01" min="0.01" name="amount" value="{{ income.amount }}" placeholder="&#xE80C; Amount" style="font-family: 'Fontello'; width: 100%;" required />

                    <input type="date" class="form-control mx-auto" style="font-family: 'Fontello';" name="date" value="{{ currentDate }}" required>

                    <select class="choice rounded" name="category" style="font-family: 'Fontello'; width: 100%;" required />
                        {% if incomeCategories %}					
                             <option value selected disabled hidden>&#xE807; Select a category</option>                          					
                                {% for incomeCategory in incomeCategories %}                             
                                    <option value="{{ incomeCategory.id }}">{{ incomeCategory.name }}</option> 
                                {% endfor %}
                        {% else %}
                            <option value selected disabled hidden>&#9785; No income category</option>
                        {% endif %}
                    </select>

                    <input type="text" class="form-control" name="comment" value="{{ income.comment }}" placeholder="&#xE808; Comment"  style="font-family: 'Fontello'; width: 100%;" />

                    <a href="/income/index"><button  type="button" class="btn btn-secondary btn-lg float-left mt-3" style="width: 94px;">Cancel</button></a>
                    <button  type="submit" class="btn btn-success btn-lg  float-right mt-3" style="width: 94px;" >Add</button>
                                        
                </form>		
                
            </div>
            
        </main> 
            
{% endblock %}
